<Window x:Class="MiniNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:MiniNote.Views"
        Title="MiniNote"
        Width="340"
        Height="500"
        MinWidth="300"
        MinHeight="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Border x:Name="MainBorder"
            CornerRadius="12"
            BorderBrush="#30FFFFFF"
            BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="#1A1A1A" Opacity="0.85"/>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="#10FFFFFF"
                    CornerRadius="12,12,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="MiniNote"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        <TextBlock x:Name="TxtPendingCount"
                                   Foreground="#70FFFFFF"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,6,0">
                        <Button x:Name="BtnPin"
                                Content="&#xE718;"
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="嵌入桌面"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Click="BtnPin_Click"/>
                        <Button x:Name="BtnMinimize"
                                Content="&#xE921;"
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="最小化"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Click="BtnMinimize_Click"/>
                        <Button x:Name="BtnClose"
                                Content="&#xE8BB;"
                                FontFamily="Segoe MDL2 Assets"
                                ToolTip="关闭"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="BtnClose_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 添加区域 -->
            <StackPanel Grid.Row="1" Margin="12,12,12,8">
                <!-- 输入框和添加按钮 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <TextBox x:Name="TxtNewTodo"
                                 Text="{Binding NewTodoContent, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 KeyDown="TxtNewTodo_KeyDown"/>
                        <!-- 占位符 -->
                        <TextBlock Text="添加新待办事项..."
                                   Foreground="#40FFFFFF"
                                   FontSize="14"
                                   Margin="12,10,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, ElementName=TxtNewTodo, Converter={StaticResource EmptyToVisibilityConverter}}"/>
                    </Grid>

                    <Button Grid.Column="1"
                            Content="&#xE710;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="16"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="8,0,0,0"
                            ToolTip="添加待办"
                            Command="{Binding AddTodoCommand}"/>
                </Grid>

                <!-- 优先级选择 -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,10,0,0"
                            Visibility="{Binding Text, ElementName=TxtNewTodo, Converter={StaticResource NotEmptyToVisibilityConverter}}">
                    <TextBlock Text="优先级"
                               Foreground="#60FFFFFF"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>
                    <RadioButton x:Name="RbLow"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityButtonStyle}"
                                 IsChecked="False"
                                 Checked="Priority_Checked"
                                 Tag="0"
                                 ToolTip="低优先级">
                        <Ellipse Width="10" Height="10" Fill="#4CAF50"/>
                    </RadioButton>
                    <RadioButton x:Name="RbMedium"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityButtonStyle}"
                                 IsChecked="True"
                                 Checked="Priority_Checked"
                                 Tag="1"
                                 Margin="6,0"
                                 ToolTip="中优先级">
                        <Ellipse Width="10" Height="10" Fill="#FFC107"/>
                    </RadioButton>
                    <RadioButton x:Name="RbHigh"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityButtonStyle}"
                                 IsChecked="False"
                                 Checked="Priority_Checked"
                                 Tag="2"
                                 ToolTip="高优先级">
                        <Ellipse Width="10" Height="10" Fill="#FF5252"/>
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <!-- 待办列表 -->
            <ScrollViewer Grid.Row="2"
                          Margin="12,4,12,0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding TodoItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <views:TodoItemView DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 空状态提示 - 只在没有待办项时显示 -->
            <StackPanel Grid.Row="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding TotalCount, Converter={StaticResource ZeroToVisibleConverter}}">
                <TextBlock Text="&#xE8D4;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="40"
                           Foreground="#25FFFFFF"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="暂无待办事项"
                           Foreground="#35FFFFFF"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
                <TextBlock Text="输入内容后按回车添加"
                           Foreground="#25FFFFFF"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 底部统计 -->
            <Border Grid.Row="3"
                    Background="#08FFFFFF"
                    CornerRadius="0,0,12,12"
                    Padding="16,10">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Foreground="#60FFFFFF" FontSize="12">
                            <Run Text="已完成"/>
                        </TextBlock>
                        <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold" Margin="6,0,0,0">
                            <Run Text="{Binding CompletedCount, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock Foreground="#60FFFFFF" FontSize="12" Margin="4,0">
                            <Run Text="/"/>
                        </TextBlock>
                        <TextBlock Foreground="#80FFFFFF" FontSize="12">
                            <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>

                    <Button Content="清除已完成"
                            HorizontalAlignment="Right"
                            Foreground="#FF6B6B"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="12"
                            Cursor="Hand"
                            Command="{Binding ClearCompletedCommand}"
                            Visibility="{Binding CompletedCount, Converter={StaticResource ZeroToCollapsedConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#FF5252"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
