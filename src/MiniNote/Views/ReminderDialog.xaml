<Window x:Class="MiniNote.Views.ReminderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="设置提醒"
        Width="360"
        Height="Auto"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border CornerRadius="16"
            BorderBrush="{DynamicResource AppBorderBrush}"
            BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="{DynamicResource DialogBackgroundColor}"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="28" ShadowDepth="8" Color="#000000" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部强调线 -->
            <Border Grid.RowSpan="2"
                    Height="3"
                    Background="{DynamicResource AccentBrush}"
                    VerticalAlignment="Top"
                    Opacity="0.95"/>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    CornerRadius="16,16,0,0">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource DialogTitleBarColor}"/>
                </Border.Background>
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,0,0">
                        <materialDesign:PackIcon Kind="BellRing"
                                                 Width="18" Height="18"
                                                 Foreground="{DynamicResource AccentBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                        <TextBlock Text="设置提醒"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button ToolTip="关闭"
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- 内容 -->
            <StackPanel Grid.Row="1" Margin="20,18,20,20">
                
                <!-- 快捷选项 -->
                <TextBlock Text="快捷设置"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="12"
                           Margin="2,0,0,10"/>
                <WrapPanel Margin="0,0,0,18">
                    <Button Content="30分钟后"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="30"/>
                    <Button Content="1小时后"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="60"/>
                    <Button Content="3小时后"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="180"/>
                    <Button Content="明天9点"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="tomorrow"/>
                </WrapPanel>
                
                <!-- 自定义时间 -->
                <TextBlock Text="自定义时间"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="12"
                           Margin="2,0,0,10"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <DatePicker x:Name="DpReminderDate"
                                materialDesign:HintAssist.Hint="选择日期"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                Background="{DynamicResource InputBackgroundBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderBrush="{DynamicResource AppBorderBrush}"/>
                    
                    <TextBox x:Name="TxtHour"
                             Grid.Column="1"
                             Text="09"
                             Style="{StaticResource TimeTextBoxStyle}"
                             Width="48"
                             MaxLength="2"
                             Margin="12,0,0,0"
                             PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                    <TextBlock Grid.Column="2"
                               Text=":"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="6,0"/>
                    <TextBox x:Name="TxtMinute"
                             Grid.Column="3"
                             Text="00"
                             Style="{StaticResource TimeTextBoxStyle}"
                             Width="48"
                             MaxLength="2"
                             PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                </Grid>
                
                <!-- 操作按钮 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="BtnClear"
                            Grid.Column="0"
                            Content="清除提醒"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Foreground="#FF6B6B"
                            Click="Clear_Click"
                            Visibility="Collapsed"/>
                    
                    <Button Grid.Column="2"
                            Content="取消"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="80"
                            Margin="0,0,12,0"
                            Click="Cancel_Click"/>
                    <Button Grid.Column="3"
                            Content="确定"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="80"
                            Click="Confirm_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
