<Window x:Class="MiniNote.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="设置"
        Width="400"
        Height="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border CornerRadius="16"
            Background="#F5202530"
            BorderBrush="#40FFFFFF"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="28" ShadowDepth="8" Color="#000000" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部强调线 -->
            <Border Grid.RowSpan="2"
                    Height="3"
                    Background="{StaticResource AccentBrush}"
                    VerticalAlignment="Top"
                    Opacity="0.95"/>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="#25FFFFFF"
                    CornerRadius="16,16,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,0,0">
                        <materialDesign:PackIcon Kind="Cog"
                                                 Width="18" Height="18"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                        <TextBlock Text="设置"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button ToolTip="关闭"
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- 设置内容 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="18,14,18,18">
                <StackPanel>
                    <!-- 常规设置 -->
                    <TextBlock Text="常规"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="2,0,0,12"/>
                    
                    <Border Background="#20FFFFFF"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0,0,0,18">
                        <StackPanel>
                            <!-- 开机自启 -->
                            <Grid Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="开机自启动"
                                               Foreground="White"
                                               FontSize="14"/>
                                    <TextBlock Text="开机时自动启动 MiniNote"
                                               Foreground="#60FFFFFF"
                                               FontSize="11"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                                <ToggleButton x:Name="TglAutoStart"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="TglAutoStart_Changed"
                                              Unchecked="TglAutoStart_Changed"/>
                            </Grid>
                            
                            <!-- 嵌入桌面 -->
                            <Grid Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="嵌入桌面"
                                               Foreground="White"
                                               FontSize="14"/>
                                    <TextBlock Text="固定窗口到桌面，Win+D 不会隐藏"
                                               Foreground="#60FFFFFF"
                                               FontSize="11"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                                <ToggleButton x:Name="TglEmbedDesktop"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="TglEmbedDesktop_Changed"
                                              Unchecked="TglEmbedDesktop_Changed"/>
                            </Grid>
                            
                            <!-- 透明度 -->
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="窗口透明度"
                                               Foreground="White"
                                               FontSize="14"/>
                                    <TextBlock Text="调整窗口的背景透明度"
                                               Foreground="#60FFFFFF"
                                               FontSize="11"
                                               Margin="0,3,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <Slider x:Name="SldOpacity"
                                            Width="110"
                                            Minimum="0.3"
                                            Maximum="1.0"
                                            Value="0.85"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource ModernSliderStyle}"
                                            ValueChanged="SldOpacity_ValueChanged"/>
                                    <TextBlock Text="{Binding Value, ElementName=SldOpacity, StringFormat={}{0:P0}}"
                                               Foreground="#80FFFFFF"
                                               FontSize="12"
                                               Width="42"
                                               TextAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- 外观设置 -->
                    <TextBlock Text="外观"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="2,0,0,12"/>
                    
                    <Border Background="#20FFFFFF"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0,0,0,18">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="深色主题"
                                           Foreground="White"
                                           FontSize="14"/>
                                <TextBlock Text="切换深色/浅色主题"
                                           Foreground="#60FFFFFF"
                                           FontSize="11"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                            <ToggleButton x:Name="TglDarkTheme"
                                          IsChecked="True"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          Checked="TglDarkTheme_Changed"
                                          Unchecked="TglDarkTheme_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- 通知设置 -->
                    <TextBlock Text="通知"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="2,0,0,12"/>
                    
                    <Border Background="#20FFFFFF"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0,0,0,18">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="启用提醒通知"
                                           Foreground="White"
                                           FontSize="14"/>
                                <TextBlock Text="在设定时间发送 Windows 通知"
                                           Foreground="#60FFFFFF"
                                           FontSize="11"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                            <ToggleButton x:Name="TglNotifications"
                                          IsChecked="True"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Style="{StaticResource ToggleSwitchStyle}"/>
                        </Grid>
                    </Border>
                    
                    <!-- 关于 -->
                    <TextBlock Text="关于"
                               Foreground="#80FFFFFF"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="2,0,0,12"/>
                    
                    <Border Background="#20FFFFFF"
                            CornerRadius="12"
                            Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="{StaticResource AccentBrush}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="MiniNote"
                                           Foreground="White"
                                           FontSize="17"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                            <TextBlock Text="版本 1.0.0"
                                       Foreground="#80FFFFFF"
                                       FontSize="12"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="一款简洁的桌面待办工具"
                                       Foreground="#60FFFFFF"
                                       FontSize="12"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
