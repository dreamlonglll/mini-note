<Window x:Class="MiniNote.Views.AddTodoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="添加待办"
        Width="380"
        Height="Auto"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border CornerRadius="16"
            Background="#F5202530"
            BorderBrush="#40FFFFFF"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="28" ShadowDepth="8" Color="#000000" Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部强调线 -->
            <Border Grid.RowSpan="2"
                    Height="3"
                    Background="{StaticResource AccentBrush}"
                    VerticalAlignment="Top"
                    Opacity="0.95"/>
            
            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="#25FFFFFF"
                    CornerRadius="16,16,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,0,0">
                        <materialDesign:PackIcon Kind="Plus"
                                                 Width="18" Height="18"
                                                 Foreground="{StaticResource AccentBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                        <TextBlock Text="添加待办"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="15"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button ToolTip="关闭"
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Style="{StaticResource TitleBarButtonStyle}"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- 表单内容 -->
            <StackPanel Grid.Row="1" Margin="20,18,20,20">
                
                <!-- 待办内容 -->
                <TextBlock Text="待办内容"
                           Foreground="#90FFFFFF"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="2,0,0,10"/>
                <TextBox x:Name="TxtContent"
                         materialDesign:HintAssist.Hint="输入待办事项..."
                         materialDesign:HintAssist.Foreground="#50FFFFFF"
                         materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource AccentBrush}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Background="#20FFFFFF"
                         Foreground="White"
                         BorderBrush="#30FFFFFF"
                         CaretBrush="White"
                         FontSize="14"
                         MaxLength="500"
                         TextChanged="TxtContent_TextChanged"/>
                
                <!-- 优先级 -->
                <TextBlock Text="优先级"
                           Foreground="#90FFFFFF"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="2,20,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RbLow"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityRadioStyle}"
                                 Tag="0"
                                 ToolTip="低优先级">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#4CAF50" Margin="0,0,8,0"/>
                            <TextBlock Text="低" Foreground="White" FontSize="13"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="RbMedium"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityRadioStyle}"
                                 IsChecked="True"
                                 Tag="1"
                                 ToolTip="中优先级">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#FFC107" Margin="0,0,8,0"/>
                            <TextBlock Text="中" Foreground="White" FontSize="13"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="RbHigh"
                                 GroupName="Priority"
                                 Style="{StaticResource PriorityRadioStyle}"
                                 Tag="2"
                                 ToolTip="高优先级">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#FF5252" Margin="0,0,8,0"/>
                            <TextBlock Text="高" Foreground="White" FontSize="13"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
                
                <!-- 提醒时间 -->
                <TextBlock Text="提醒时间"
                           Foreground="#90FFFFFF"
                           FontSize="12"
                           FontWeight="Medium"
                           Margin="2,20,0,10"/>
                
                <!-- 快捷提醒 -->
                <WrapPanel Margin="0,0,0,12">
                    <Button Content="30分钟后"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="30"/>
                    <Button Content="1小时后"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="60"/>
                    <Button Content="明天9点"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="QuickReminder_Click"
                            Tag="tomorrow"/>
                    <Button x:Name="BtnClearReminder"
                            Content="清除"
                            Style="{StaticResource QuickReminderButtonStyle}"
                            Click="ClearReminder_Click"
                            Visibility="Collapsed"/>
                </WrapPanel>

                <!-- 自定义时间 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <DatePicker x:Name="DpReminderDate"
                                materialDesign:HintAssist.Hint="选择日期"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                Background="#20FFFFFF"
                                Foreground="White"
                                BorderBrush="#30FFFFFF"
                                SelectedDateChanged="DpReminderDate_SelectedDateChanged"/>
                    
                    <TextBox x:Name="TxtReminderHour"
                             Grid.Column="1"
                             Text="09"
                             Style="{StaticResource TimeTextBoxStyle}"
                             Width="48"
                             MaxLength="2"
                             Margin="12,0,0,0"
                             PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                    <TextBlock Grid.Column="2"
                               Text=":"
                               Foreground="#80FFFFFF"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="6,0"/>
                    <TextBox x:Name="TxtReminderMinute"
                             Grid.Column="3"
                             Text="00"
                             Style="{StaticResource TimeTextBoxStyle}"
                             Width="48"
                             MaxLength="2"
                             PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                </Grid>
                
                <!-- 操作按钮 -->
                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1"
                            Content="取消"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="90"
                            Margin="0,0,12,0"
                            Click="Cancel_Click"/>
                    <Button x:Name="BtnAdd"
                            Grid.Column="2"
                            Content="添加"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="90"
                            IsEnabled="False"
                            Click="Add_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
