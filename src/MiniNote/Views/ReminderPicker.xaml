<UserControl x:Class="MiniNote.Views.ReminderPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Border Background="#20FFFFFF"
            CornerRadius="8"
            Padding="14">
        <StackPanel>
            <TextBlock Text="设置提醒"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,14"/>
            
            <!-- 快捷选项 -->
            <WrapPanel Margin="0,0,0,14">
                <Button Content="30分钟后"
                        Style="{StaticResource QuickReminderButtonStyle}"
                        Click="SetReminder_Click"
                        Tag="30"/>
                <Button Content="1小时后"
                        Style="{StaticResource QuickReminderButtonStyle}"
                        Click="SetReminder_Click"
                        Tag="60"/>
                <Button Content="3小时后"
                        Style="{StaticResource QuickReminderButtonStyle}"
                        Click="SetReminder_Click"
                        Tag="180"/>
                <Button Content="明天"
                        Style="{StaticResource QuickReminderButtonStyle}"
                        Click="SetReminder_Click"
                        Tag="tomorrow"/>
            </WrapPanel>
            
            <!-- 自定义时间 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,6,0">
                    <TextBlock Text="日期"
                               Foreground="#80FFFFFF"
                               FontSize="11"
                               Margin="0,0,0,6"/>
                    <DatePicker x:Name="DatePickerControl"
                                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                Style="{StaticResource ModernDatePickerStyle}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="6,0,0,0">
                    <TextBlock Text="时间"
                               Foreground="#80FFFFFF"
                               FontSize="11"
                               Margin="0,0,0,6"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="TxtHour"
                                 Text="{Binding Hour, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TimeTextBoxStyle}"
                                 MaxLength="2"
                                 PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                        <TextBlock Grid.Column="1"
                                   Text=":"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="6,0"/>
                        <TextBox Grid.Column="2"
                                 x:Name="TxtMinute"
                                 Text="{Binding Minute, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TimeTextBoxStyle}"
                                 MaxLength="2"
                                 PreviewTextInput="TimeTextBox_PreviewTextInput"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                <Button Content="清除提醒"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Clear_Click"
                        Margin="0,0,8,0"
                        Visibility="{Binding HasExistingReminder, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Button Content="取消"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Cancel_Click"
                        Margin="0,0,8,0"/>
                <Button Content="确定"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Confirm_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
