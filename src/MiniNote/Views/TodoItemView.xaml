<UserControl x:Class="MiniNote.Views.TodoItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border x:Name="ItemBorder"
            Style="{StaticResource TodoItemBorderStyle}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 完成复选框 -->
            <CheckBox Grid.Column="0"
                      IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"
                      Command="{Binding ToggleCompleteCommand}">
                <CheckBox.Template>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Width="22" Height="22"
                                CornerRadius="11"
                                BorderBrush="#50FFFFFF"
                                BorderThickness="2"
                                Background="Transparent"
                                Cursor="Hand">
                            <TextBlock x:Name="check"
                                       Text="&#xE73E;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="11"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </CheckBox.Template>
            </CheckBox>

            <!-- 内容 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Grid>
                    <TextBlock Text="{Binding Content}"
                               Foreground="White"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Opacity="{Binding ContentOpacity}"/>
                    <!-- 删除线 -->
                    <Rectangle Height="1.5"
                               Fill="#60FFFFFF"
                               VerticalAlignment="Center"
                               Margin="0,1,0,0"
                               Visibility="{Binding StrikethroughVisibility}"/>
                </Grid>

                <!-- 提醒时间 -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,6,0,0"
                            Visibility="{Binding HasReminder, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="&#xE787;"
                               FontFamily="Segoe MDL2 Assets"
                               Foreground="#70FFFFFF"
                               FontSize="10"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ReminderTimeText}"
                               Foreground="#70FFFFFF"
                               FontSize="11"
                               Margin="4,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- 优先级标记 -->
            <Border Grid.Column="2"
                    Width="4" Height="24"
                    CornerRadius="2"
                    Background="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                    VerticalAlignment="Center"
                    Margin="12,0"
                    ToolTip="{Binding PriorityText}"/>

            <!-- 设置提醒按钮 -->
            <Button Grid.Column="3"
                    Width="28" Height="28"
                    Content="&#xE787;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="12"
                    ToolTip="设置提醒"
                    Command="{Binding SetReminderCommand}"
                    Style="{StaticResource IconButtonStyle}">
                <Button.Foreground>
                    <SolidColorBrush Color="{Binding HasReminder, Converter={StaticResource BoolToReminderColorConverter}}"/>
                </Button.Foreground>
            </Button>

            <!-- 删除按钮 -->
            <Button Grid.Column="4"
                    Width="28" Height="28"
                    Content="&#xE74D;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="12"
                    Foreground="#60FFFFFF"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="删除"
                    Command="{Binding DeleteCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg"
                                            Background="Transparent"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#30FF5252"/>
                                            <Setter Property="Foreground" Value="#FF5252"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=ItemBorder}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
