<UserControl x:Class="MiniNote.Views.TodoItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <UserControl.Resources>
        <!-- 自定义复选框样式 -->
        <Style x:Key="TodoCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Width="22" Height="22"
                                CornerRadius="11"
                                BorderBrush="#50FFFFFF"
                                BorderThickness="2"
                                Background="Transparent">
                            <materialDesign:PackIcon x:Name="check"
                                                     Kind="Check"
                                                     Width="14" Height="14"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Visibility="Collapsed"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter TargetName="check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="ItemBorder"
            Style="{StaticResource TodoItemBorderStyle}"
            MouseLeftButtonDown="ItemBorder_MouseLeftButtonDown"
            Cursor="Hand">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 完成复选框 - 顶端对齐 -->
            <CheckBox Grid.Column="0"
                      IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                      VerticalAlignment="Top"
                      Margin="0,2,12,0"
                      Style="{StaticResource TodoCheckBoxStyle}"
                      Checked="CheckBox_Changed"
                      Unchecked="CheckBox_Changed"/>

            <!-- 内容区域 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <!-- 主内容 -->
                <Grid>
                    <TextBlock Text="{Binding Content}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="14"
                               TextWrapping="Wrap"
                               LineHeight="22"
                               Opacity="{Binding ContentOpacity}"/>
                    <!-- 删除线 -->
                    <Rectangle Height="1.5"
                               Fill="#50FFFFFF"
                               VerticalAlignment="Center"
                               Margin="0,1,0,0"
                               Visibility="{Binding StrikethroughVisibility}"/>
                </Grid>

                <!-- 底部信息栏：优先级 + 提醒时间 -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,8,0,0">
                    <!-- 优先级 Tag - 放在左边 -->
                    <Border CornerRadius="4"
                            Padding="8,3"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Priority}" Value="1">
                                        <Setter Property="Background" Value="#FFC107"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Priority}" Value="2">
                                        <Setter Property="Background" Value="#FF5252"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Foreground="White"
                                   FontSize="10"
                                   FontWeight="Medium">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="低"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Priority}" Value="1">
                                            <Setter Property="Text" Value="中"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Priority}" Value="2">
                                            <Setter Property="Text" Value="高"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>

                    <!-- 提醒时间 - 放在右边 -->
                    <StackPanel Orientation="Horizontal"
                                Margin="10,0,0,0"
                                Visibility="{Binding HasReminder, Converter={StaticResource BoolToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="Bell"
                                                 Width="12" Height="12"
                                                 Foreground="#90FFFFFF"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ReminderTimeText}"
                                   Foreground="#90FFFFFF"
                                   FontSize="11"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
